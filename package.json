{
  "name": "next-starter",
  "description": "A comprehensive Next.js starter template",
  "version": "1.0.0",
  "private": true,
  "author": "Nikolay Rademacher",
  "license": "MIT",
  "keywords": [
    "nextjs",
    "starter",
    "template",
    "typescript",
    "sass",
    "cypress",
    "jest",
    "storybook"
  ],
  "scripts": {
    "dev": "next",
    "build": "yarn type-check && next build",
    "start": "next start",
    "type-check": "tsc",
    "test:unit": "jest --passWithNoTests",
    "test:e2e": "yarn serve:test:e2e 'cypress open'",
    "test:e2e:headless": "yarn serve:test:e2e 'cypress run'",
    "serve:test:e2e": "start-server-and-test 'yarn start' http://localhost:3000",
    "lint": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js|jsx|tsx)\"",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\" --write",
    "format:style": "prettier --ignore-path .gitignore \"src/**/*.+(css|scss)\" --write",
    "postinstall": "husky install",
    "start:sb": "start-storybook -p 6006",
    "build:sb": "build-storybook",
    "build:docker": "docker build -t next-app .",
    "start:docker": "docker run --name APP_CONTAINER -p 0.0.0.0:5000:3000 next-app"
  },
  "lint-staged": {
    "src/**/*.{ts,js,jsx,tsx}": [
      "yarn format",
      "yarn lint --fix",
      "yarn test:unit"
    ],
    "src/**/*.{css,scss,module.scss}": [
      "yarn format:style",
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "next": "latest",
    "react": "latest",
    "react-dom": "latest"
  },
  "devDependencies": {
    "@babel/core": "7.15.5",
    "@commitlint/cli": "13.2.0",
    "@commitlint/config-conventional": "13.2.0",
    "@cypress/code-coverage": "3.9.11",
    "@storybook/addon-actions": "^6.3.7",
    "@storybook/addon-essentials": "^6.3.9",
    "@storybook/addon-links": "^6.3.9",
    "@storybook/addon-postcss": "2.0.0",
    "@storybook/react": "^6.3.9",
    "@testing-library/cypress": "8.0.1",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.1.2",
    "@types/jest": "27.0.2",
    "@types/node": "16.10.2",
    "@types/react": "17.0.27",
    "@types/react-dom": "17.0.9",
    "@types/sass": "^1.16.1",
    "@typescript-eslint/eslint-plugin": "4.32.0",
    "@typescript-eslint/parser": "4.32.0",
    "autoprefixer": "10.3.6",
    "babel-jest": "27.2.4",
    "babel-plugin-istanbul": "6.0.0",
    "css-loader": "^5",
    "cypress": "8.5.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-next": "11.1.2",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-cypress": "2.12.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "7.0.2",
    "identity-obj-proxy": "3.0.0",
    "jest": "27.2.4",
    "jest-watch-typeahead": "1.0.0",
    "lint-staged": "11.1.2",
    "postcss": "8.3.8",
    "postcss-loader": "4.2.0",
    "prettier": "2.4.1",
    "sass": "^1.42.1",
    "sass-loader": "10.1.1",
    "start-server-and-test": "1.14.0",
    "style-loader": "1.3.0",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "9.0.5",
    "stylelint-config-standard": "22.0.0",
    "stylelint-scss": "3.21.0",
    "typescript": "4.4.3"
  }
}
