{
  "name": "next-starter",
  "description": "A Next.js starter to bootstrap front-end projects",
  "version": "1.0.0",
  "private": true,
  "author": "Nikolay Rademacher",
  "license": "MIT",
  "keywords": [
    "nextjs",
    "starter",
    "typescript",
    "tailwindcss"
  ],
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc",
    "test": "yarn serve:test 'cypress open'",
    "test:headless": "yarn serve:test 'cypress run'",
    "serve:test": "start-server-and-test 'yarn start' http://localhost:3000",
    "lint": "eslint --ignore-path .gitignore \"./**/*.+(ts|js|tsx)\"",
    "format": "prettier --ignore-path .gitignore \"./**/*.+(ts|js|tsx)\" --write",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "./**/*.{ts,js,jsx,tsx}": [
      "yarn lint --fix",
      "yarn format"
    ]
  },
  "dependencies": {
    "@tailwindcss/aspect-ratio": "latest",
    "@tailwindcss/forms": "latest",
    "next": "latest",
    "open-color": "latest",
    "react": "latest",
    "react-dom": "latest",
    "tailwind-bootstrap-grid": "latest",
    "tailwindcss": "latest"
  },
  "devDependencies": {
    "@cypress/code-coverage": "3.9.7",
    "@types/node": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "autoprefixer": "latest",
    "cypress": "7.6.0",
    "eslint": "latest",
    "eslint-config-airbnb": "latest",
    "eslint-config-next": "latest",
    "eslint-config-prettier": "latest",
    "eslint-import-resolver-typescript": "latest",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jsx-a11y": "latest",
    "eslint-plugin-prettier": "latest",
    "eslint-plugin-react": "latest",
    "eslint-plugin-react-hooks": "latest",
    "husky": "latest",
    "lint-staged": "latest",
    "postcss": "latest",
    "prettier": "latest",
    "start-server-and-test": "1.12.5",
    "typescript": "latest"
  }
}
