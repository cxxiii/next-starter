{
  "name": "next-starter",
  "description": "A comprehensive Next.js starter template",
  "version": "1.0.0",
  "private": true,
  "author": "Nikolay Rademacher",
  "license": "MIT",
  "keywords": [
    "cypress",
    "nextjs",
    "starter",
    "tailwindcss",
    "template",
    "typescript"
  ],
  "scripts": {
    "dev": "next",
    "build": "yarn type-check && next build",
    "start": "next start",
    "type-check": "tsc",
    "test": "yarn serve:test 'cypress open'",
    "test:headless": "yarn serve:test 'cypress run'",
    "serve:test": "start-server-and-test 'yarn start' http://localhost:3000",
    "lint": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js|jsx|tsx)\"",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\" --write",
    "postinstall": "husky install",
    "build:docker": "docker build -t next-app .",
    "start:docker": "docker run --name APP_CONTAINER -p 0.0.0.0:5000:3000 next-app"
  },
  "lint-staged": {
    "src/**/*.{ts,js,jsx,tsx}": [
      "yarn format",
      "yarn lint --fix",
      "yarn test:headless"
    ]
  },
  "dependencies": {
    "next": "latest",
    "react": "latest",
    "react-dom": "latest"
  },
  "devDependencies": {
    "@babel/core": "7.15.5",
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@cypress/code-coverage": "3.9.11",
    "@testing-library/cypress": "8.0.1",
    "@testing-library/react": "12.1.0",
    "@types/node": "16.9.1",
    "@types/react": "17.0.21",
    "@types/react-dom": "17.0.9",
    "@typescript-eslint/eslint-plugin": "4.31.1",
    "@typescript-eslint/parser": "4.31.1",
    "autoprefixer": "10.3.4",
    "babel-plugin-istanbul": "6.0.0",
    "cypress": "8.4.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-next": "11.1.2",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-cypress": "2.12.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "7.0.2",
    "lint-staged": "11.1.2",
    "open-color": "^1.9.1",
    "postcss": "8.3.6",
    "prettier": "2.4.1",
    "start-server-and-test": "1.14.0",
    "tailwind-bootstrap-grid": "^4.0.0",
    "tailwindcss": "^2.2.15",
    "typescript": "4.4.3"
  }
}
