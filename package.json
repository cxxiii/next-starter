{
  "name": "next-starter",
  "description": "A comprehensive Next.js starter template",
  "version": "1.0.0",
  "private": true,
  "author": "Nikolay Rademacher",
  "license": "MIT",
  "keywords": [
    "nextjs",
    "starter",
    "typescript"
  ],
  "scripts": {
    "dev": "next",
    "build": "yarn type-check && next build",
    "start": "next start",
    "type-check": "tsc",
    "test:unit": "jest --passWithNoTests",
    "test:e2e": "yarn serve:test:e2e 'cypress open'",
    "test:e2e:headless": "yarn serve:test:e2e 'cypress run'",
    "serve:test:e2e": "start-server-and-test 'yarn start' http://localhost:3000",
    "lint": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js|jsx|tsx)\"",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\" --write",
    "format:style": "prettier --ignore-path .gitignore \"src/**/*.+(css|scss)\" --write",
    "postinstall": "husky install",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "lint-staged": {
    "./**/*.{ts,js,jsx,tsx}": [
      "yarn lint --fix",
      "yarn format",
      "yarn test:unit"
    ],
    "*.{css, scss}": [
      "stylelint --fix",
      "yarn format:style"
    ]
  },
  "dependencies": {
    "next": "latest",
    "open-color": "1.8.0",
    "react": "latest",
    "react-dom": "latest",
    "sass": "1.35.2"
  },
  "devDependencies": {
    "@babel/core": "7.14.6",
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@cypress/code-coverage": "3.9.9",
    "@storybook/addon-actions": "^6.3.4",
    "@storybook/addon-essentials": "^6.3.4",
    "@storybook/addon-links": "^6.3.4",
    "@storybook/addon-postcss": "2.0.0",
    "@storybook/react": "^6.3.4",
    "@testing-library/cypress": "7.0.6",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.0.0",
    "@types/jest": "26.0.24",
    "@types/node": "16.3.1",
    "@types/react": "17.0.14",
    "@types/react-dom": "17.0.9",
    "@typescript-eslint/eslint-plugin": "4.28.3",
    "@typescript-eslint/parser": "4.28.3",
    "autoprefixer": "10.3.1",
    "babel-jest": "27.0.6",
    "babel-plugin-istanbul": "6.0.0",
    "css-loader": "5.2.6",
    "cypress": "7.7.0",
    "eslint": "7.30.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-next": "11.0.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.4.0",
    "eslint-plugin-cypress": "2.11.3",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "7.0.1",
    "identity-obj-proxy": "3.0.0",
    "jest": "27.0.6",
    "jest-watch-typeahead": "0.6.4",
    "lint-staged": "11.0.0",
    "postcss": "8.3.5",
    "postcss-loader": "4.2.0",
    "prettier": "2.3.2",
    "sass-loader": "10.1.1",
    "start-server-and-test": "1.12.6",
    "style-loader": "1.3.0",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-standard": "22.0.0",
    "stylelint-scss": "3.19.0",
    "typescript": "4.3.5"
  }
}
